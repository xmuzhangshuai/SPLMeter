<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@android:id/background"
        android:paddingBottom="3px"
        android:paddingTop="3px">
        <shape android:shape="rectangle" >
            <gradient
                android:angle="0"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#fa0300"
                android:startColor="#1e984a"
                android:type="linear" />

            <stroke
                android:width="0.1dp"
                android:color="@color/black" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress"
        android:paddingBottom="3px"
        android:paddingTop="3px">
        <clip>
            <shape android:shape="rectangle" >
                <gradient
                    android:angle="0"
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:endColor="#fa0300"
                    android:startColor="#1e984a"
                    android:type="linear" />

                <stroke
                    android:width="0.1dp"
                    android:color="@color/black" />
            </shape>
        </clip>
    </item>

</layer-list>